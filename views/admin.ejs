<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NETFLIX ADMIN</title>
    <!-- css -->
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
  </head>
  <body>
    <main>
      <section class="header"><%- include("./partials/header.ejs") %></section>
      <section class="aside"><%- include("./partials/aside.ejs") %></section>
      <section class="layout">
        <div class="main_banner">

            <div class="title">
              <h1 class="banner_title">
                Doctor Strange <br />Multiverse Of Madness
              </h1>
              <span class="release">06-05-2022</span>
              <span class="release">2hr 6m</span>
              <span class="release">Action, Scientific</span>
              <p class="banner_dsc">
                Doctor Strange teams up with a mysterious teenage girl from his
                dreams who can travel across multiverses, to battle multiple
                threats, including other-universe versions of himself, which
                threaten to wipe out millions across the multiverse.
              </p>
            </div>
            <a
            href="https://youtu.be/aWzlQ2N6qqg?si=9YBNDoCyQrRlch3O"
            target="_blank"
            >
            <button class="btn tailer" style="margin-left: 30px">
              Watch Trailer
            </button>
          </a>
          
        </div>
        <section class="cardArea" style="margin: 50px 30px">
          <div class="cardBox flex">
            <% showData.map((val) => { %>
            <div class="card">
              <div class="card_img">
                <img src="<%= val.img %>" alt="<%= val.name %> image" />
              </div>
              <div class="hide">
                <div class="rating" style="margin: 5px 10px">
                  <i class="fa fa-star" style="color: #f1c40f"></i> <%=
                  val.rating %>
                </div>
                <div class="cardTitle">
                  <h2><%= val.name %></h2>
                </div>
                <div class="date_category">
                  <span class="date"><%= val.date %></span>
                  <span class="category"><%= val.category %></span>
                </div>
                <div class="dsc" style="margin-bottom: 18px;">
                  <p><%= val.dsc %></p>
                </div>
                <div class="flex" style="justify-content: space-evenly;">
                  <div class="delete">
                    <a href="/deleteData?id=<%= val._id %>">

                      <button class="btn tailer">Delete Movie</button></a
                    >
                  </div>
                  <div class="edit">
                    <a href="/editpage?id=<%= val._id %>"><button class="btn tailer">Edit Movie</button></a>
                  </div>
                </div>
                <div class="tailer">
                  <a href="/tailer?id=<%= val._id %>"
                    ><button class="btn tailer">Watch Tailer</button></a
                  >
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </section>
      </section>
    </main>

    <script>
      
    </script>
  </body>
</html>
