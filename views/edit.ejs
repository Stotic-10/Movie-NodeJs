<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NETFLIX EDITMOVIE</title>
    <!-- css -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <main>
      <section class="header"><%- include("./partials/header.ejs") -%></section>
      <section class="aside"><%- include("./partials/aside.ejs") -%></section>
      <section class="AddData panel_padding" style="width: 100%; height: 100vh">
        <div class="form_box">
          <form action="/EditData" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="<%= val._id %>">
            <h2>Edit Movie</h2>
              <input type="text" name="name"  placeholder="Title" required value="<%= val.name %>"/>
            <input
              type="text"
              name="date"
              class="textdate"
              placeholder="Release Date"
              value="<%= val.date %>"
              required
            />
            <input
              type="text"
              name="category"
              required
              placeholder="Category"
              value="<%= val.category %>"
            />
            <input type="text" name="rating" value="<%= val.rating %>" required placeholder="Rating" list="ratingOptions">
            <datalist id="ratingOptions">
              <option value="⭐"></option>
              <option value="⭐⭐"></option>
              <option value="⭐⭐⭐"></option>
              <option value="⭐⭐⭐⭐"></option>
              <option value="⭐⭐⭐⭐⭐"></option>
            </datalist>
            <textarea
              name="dsc"
              rows="3"
              cols="32"
              placeholder="Description"
            ><%= val.dsc %></textarea>
            <input type="file" name="image" class="file" value="<%= val.img %>" />
            <input type="url" name="trailer" placeholder="URL Link" value="<%= val.trailer %>"/>
            <input type="submit" value="Edit Movie" class="btn" />
          </form>
        </div>
      </section>
    </main>
  </body>
</html>
